generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String         @id @default(cuid(2))
  firstname    String
  lastName     String
  email        String         @unique
  password     String
  phoneNumber  String
  profileImage String?
  role         Role           @default(USER)
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  RefreshToken RefreshToken[]
}

model RefreshToken {
  id       String @id @default(cuid(2))
  hashedRt String
  userId   String
  user     User   @relation(fields: [userId], references: [id])
}

enum Role {
  SUPERADMIN
  ADMIN
  USER
}
